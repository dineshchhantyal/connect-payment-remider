// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  amount   Int     @default(0)
  currency String  @default("USD")
  paid     Boolean @default(false)
  paidAt   DateTime?
  duration DateTime    @default(now())
  timezones String? @default("America/Los_Angeles")
  link      String?
  image     String?
  type      String? @default("one-time") // one-time, monthly, yearly
  category String? @default("other") // other, donation, subscription, membership
  paymentMethod String? @default("paypal") // paypal, stripe, venmo, cashapp, bank, crypto, credit-card, cash
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
  image String?
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  payments   Payment[]
  profile Profile?
}
